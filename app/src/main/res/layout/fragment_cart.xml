<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CartFragment"
        android:orientation="vertical"
        >
        <include layout="@layout/header_layout" android:id="@+id/header"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cvImageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/crime_scene_img"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tittle Event"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_toRightOf="@id/cvImageview"
                />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25"
                android:fontFamily="@font/metropolis_bold"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@id/cvImageview"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/yelloe_rec_cornors_30"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_15sdp"
                >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_minus"
                    android:padding="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/metropolis_bold"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:background="#FFE8A8"
                    />
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add"
                    android:padding="@dimen/_10sdp"
                    />

            </LinearLayout>

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limited team places available..."
                    android:fontFamily="@font/poppins_bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:progress="50"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/progressBar" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:id="@+id/tvTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Only 8 tickets remaining"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team ticket (per team of 6)"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@+id/tvTicket"
                        />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS. 6,300.00"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBookEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/yellow"
            android:layout_alignParentBottom="true"
            android:text="@string/book_event"
            android:layout_marginBottom="@dimen/_25sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bt_bg"/>

    </RelativeLayout>

</layout>