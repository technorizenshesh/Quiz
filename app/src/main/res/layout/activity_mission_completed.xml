<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.game2.MissionCompletedAct">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        >
        <ImageView
            android:id="@+id/ivGame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:src="@color/grey"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivGame"
            android:layout_marginTop="@dimen/_15sdp"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/congratulations_you_have_saved_the_world_from_the_next_pandemic_you_may_open_envelope_4"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnEndOfGame"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:layout_marginBottom="@dimen/_15sdp"
          android:background="@drawable/bt_bg"
          android:paddingHorizontal="@dimen/_20sdp"
          android:text="@string/end_of_the_game"
          android:textColor="@color/yellow"
          android:textSize="@dimen/_12sdp"
          android:textStyle="bold" />
</RelativeLayout>
</layout>